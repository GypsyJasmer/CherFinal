@model OutfitListViewModel
@{
    ViewData["Title"] = "Favorite Outfit";
}

<div>
    <h1>Cher's Fashion</h1>
    <p> Pick your favorite outfit of Cher's</p>

    <a asp-controller="Fashion" asp-action="Index">Fashion Home</a>

</div>



<div class="text-center">
<h2>My Favorites</h2>
<form asp-action="Delete" method="post">
    <a asp-action="Index" asp-controller="Fashion" class="btn btn-primary"
       asp-route-activeConf="@Model.ActiveDecade">
        Back to Fashion Main Page
    </a>
    <button type="submit" class="btn btn-primary">
        Clear Favorites
    </button>
</form>
 </div>
<br />



<div class="row">
    <div class="col-sm-3">
        @* <h3 class="mt-3">Conference</h3>

        <div class="list-group">
            @foreach (OutfitYear oy in Model.OutfitYears)
            {
                <a asp-action="Index"
                   asp-route-activeConf="@oy.OutfitYearID"
                   class="list-group-item @Model.CheckActiveOutfitYear(oy.OutfitYearID)">
                    @oy.Decade
                </a>
            }
        </div>
        *@
        <div class="col-8 offset-2">
            <ul class="list-group">
                @foreach (Outfit outfit in Model.Outfits)
                {
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-sm-4">
                                <img src="~/FavOutfits/@outfit.LogoImage" alt="" />
                            </div>
                            <div class="col-sm-4">
                                @outfit.Title
                            </div>
                            <div class="col-sm-4">
                                @outfit.Decade
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
